apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: argocd-redirect
  namespace: argocd
spec:
  parentRefs:
    - name: gateway-internal
      namespace: gateway
      sectionName: web  # <--- MUST match the HTTP listener name in your Gateway
  hostnames:
    - "argocd.labber.mcmn.io"
  rules:
    - filters:
        - type: RequestRedirect
          requestRedirect:
            scheme: https
            statusCode: 301
      # No backendRefs needed here, just the filter!