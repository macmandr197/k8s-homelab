apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: argocd
  namespace: argocd
spec:
  parentRefs:
    - name: gateway-internal
      namespace: gateway
      sectionName: websecure # <--- MUST match the HTTPS listener name
  hostnames:
    - "argocd.labber.mcmn.io"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: argocd-server #service name
          port: 80 #use whatever port service is listening on